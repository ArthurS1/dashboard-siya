{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "semi": "error",
    "semi-spacing": "error",
    "semi-style": "error",
    "camelcase": "error",
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 80 }],
    "@typescript-eslint/no-unused-vars": ["warn", {
      "varsIgnorePattern": "^_"
    }]
  }
}
